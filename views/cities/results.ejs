<h1>Here are your results!</h1>

<% if (results.length) { %>
  <ul>
    <% results.forEach(result=>{ %>
      <li><%= result.name %>, <%= result.state %></li>
      <form method="POST" action="/faves">
        <input type="hidden" name="name" value="<%= result.name %>">
        <input type="hidden" name="state" value="<%= result.state %>">
        <input type="hidden" name="lat" value="<%= result.lat %>">
        <input type="hidden" name="long" value="<%= result.long %>">
        <input type="submit" value="Add City to Faves">
      </form>
    <% }) %>
  </ul>
<% } else { %>
  <h3>There are no cities with that name</h3>
<% } %>